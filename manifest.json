{
    "manifest_version": 3,
    "name": "Simple Ad Blocker",
    "version": "1.0",
    "description": "Blocks common ads from websites.",
    "permissions": ["scripting", "webRequest", "webRequestBlocking", "declarativeNetRequest"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  